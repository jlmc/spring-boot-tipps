{
  "mappings": [
    {
      "name": "Flip flop mapping",
      "request": {
        "urlPath": "/flip-flop",
        "method": "POST"
      },
      "response": {
        "status": 200,
        "jsonBody": {
          "id": "{{randomValue type='UUID'}}",
          "x-timestamp": "{{now format='epoch'}}",
          "self": "{{request.path}}"
        },
        "headers": {
          "Content-Type": "application/json"
        },
        "fixedDelayMilliseconds": 350,
        "transformers": [
          "response-template"
        ]
      }
    },
    {
      "request": {
        "method": "GET",
        "urlPathPattern": "/api/products/1"
      },
      "response": {
        "status": 200,
        "bodyFileName": "product-by-1.json",
        "headers": {
          "Content-Type": "application/json"
        },
        "fixedDelayMilliseconds": 1000,
        "transformers": ["response-template"]
      },
      "priority": 1
    },
    {
      "request": {
        "method": "GET",
        "urlPathPattern": "/api/products/2"
      },
      "response": {
        "status": 404,
        "jsonBody": {
          "error": "X404",
          "message": "not found product 2"
        },
        "transformers": ["response-template"]
      }
    },


    {
      "scenarioName": "Retry Scenario",
      "requiredScenarioState": "Started",
      "newScenarioState": "First Failure",
      "request": {
        "method": "GET",
        "urlPath": "/api/products/5"
      },
      "response": {
        "status": 502,
        "jsonBody": {
          "error": "first attend"
        },
        "headers": {
          "Content-Type": "application/json"
        },
        "fixedDelayMilliseconds": 500,
        "transformers": ["response-template"]
      },
      "priority": 1
    },
    {
      "scenarioName": "Retry Scenario",
      "requiredScenarioState": "First Failure",
      "newScenarioState": "Second Failure",
      "request": {
        "method": "GET",
        "urlPath": "/api/products/5"
      },
      "response": {
        "status": 503,
        "jsonBody": {
          "error": "Second attend"
        },
        "headers": {
          "Content-Type": "application/json"
        },
        "fixedDelayMilliseconds": 500,
        "transformers": ["response-template"]
      },
      "priority": 1
    },
    {
      "scenarioName": "Retry Scenario",
      "requiredScenarioState": "Second Failure",
      "newScenarioState": "Success",
      "request": {
        "method": "GET",
        "urlPath": "/api/products/5"
      },
      "response": {
        "status": 504,
        "jsonBody": {
          "error": "Thirty attend"
        },
        "headers": {
          "Content-Type": "application/json"
        },
        "fixedDelayMilliseconds": 500,
        "transformers": ["response-template"]
      },
      "priority": 1
    },
    {
      "scenarioName": "Retry Scenario",
      "requiredScenarioState": "Success",
      "newScenarioState": "Started",
      "request": {
        "method": "GET",
        "urlPath": "/api/products/5"
      },
      "response": {
        "status": 200,
        "bodyFileName": "product-by-5.json",
        "headers": {
          "Content-Type": "application/json"
        },
        "fixedDelayMilliseconds": 500,
        "transformers": ["response-template"]
      },
      "priority": 1
    }
  ]
}